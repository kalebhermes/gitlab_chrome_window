{
  "manifest_version": 3,
  "name": "GitLab Merge Requests",
  "version": "1.0",
  "description": "View your open GitLab merge requests with pipeline status.",
  "permissions": ["tabs", "https://gitlab.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
